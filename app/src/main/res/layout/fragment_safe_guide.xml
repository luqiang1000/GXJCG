<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_40dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingBottom="@dimen/normal_55dp"
        android:paddingLeft="@dimen/normal_55dp"
        android:paddingRight="@dimen/normal_55dp">

        <WebView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/normal_32sp"
            android:textColor="@color/color_666"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/normal_55dp"
        android:paddingLeft="@dimen/normal_55dp"
        android:paddingRight="@dimen/normal_55dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="@dimen/normal_400dp"
            android:layout_height="@dimen/normal_90dp"
            android:background="@drawable/selector_bdc8ce_click_r10"
            android:text="@string/butongyibingtuichu"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_36sp" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="@dimen/normal_400dp"
            android:layout_height="@dimen/normal_90dp"
            android:layout_marginLeft="@dimen/normal_40dp"
            android:background="@drawable/selector_main_click_r10"
            android:text="@string/tongyibingjixu"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_36sp" />
    </LinearLayout>

</LinearLayout>