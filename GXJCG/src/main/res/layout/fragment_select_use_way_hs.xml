<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_50dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_btn_phone"
            android:layout_width="@dimen/normal_510dp"
            android:layout_height="@dimen/normal_400dp"
            android:background="@mipmap/im_phone_hs">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/normal_100dp"
                android:text="手机号验证"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_42sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_btn_id_card"
            android:layout_width="@dimen/normal_510dp"
            android:layout_height="@dimen/normal_400dp"
            android:layout_marginLeft="@dimen/normal_50dp"
            android:background="@mipmap/im_idcard_hs">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/normal_100dp"
                android:text="身份证验证"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_42sp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/normal_55dp"
        android:paddingLeft="@dimen/normal_55dp"
        android:paddingRight="@dimen/normal_55dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="@dimen/normal_400dp"
            android:layout_height="@dimen/normal_90dp"
            android:background="@drawable/selector_gray_primary"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_36sp" />

    </LinearLayout>

</LinearLayout>