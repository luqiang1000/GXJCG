<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_120dp"
    android:background="@color/color_75C4EC"
    android:padding="10dp">
    
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/normal_240dp"
        android:layout_height="@dimen/normal_80dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/logo_icon" />
    
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:text="2018-06-18 12:26"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_28sp"
        android:textStyle="bold" />
</RelativeLayout>