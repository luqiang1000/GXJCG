<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/normal_55dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/white">
        
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/normal_48sp"/>
                    <ImageView
                        android:id="@+id/iv_tip"
                        android:layout_width="@dimen/normal_73dp"
                        android:layout_height="@dimen/normal_73dp"
                        android:src="@mipmap/ic_004"
                        android:scaleType="centerCrop"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_bg"
                    android:layout_marginTop="@dimen/normal_60dp"
                    android:layout_width="@dimen/normal_620dp"
                    android:layout_height="@dimen/normal_370dp"
                    android:src="@mipmap/im_0001"/>
            </LinearLayout>
        </FrameLayout>
   
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/normal_55dp"
        android:paddingBottom="@dimen/normal_55dp"
        android:paddingRight="@dimen/normal_55dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="@dimen/normal_400dp"
            android:layout_height="@dimen/normal_90dp"
            android:background="@drawable/selector_bdc8ce_click_r10"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_36sp"/>
        
        
    </LinearLayout>
    
</LinearLayout>