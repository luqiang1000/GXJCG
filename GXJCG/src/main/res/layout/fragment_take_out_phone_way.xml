<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/normal_55dp"
        android:layout_weight="1"
        android:background="@drawable/shape_e5e5e5_r10"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_50dp"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/normal_20dp"
                    android:singleLine="true"
                    android:text="手机号码"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/normal_34sp" />
                
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="@dimen/normal_520dp"
                    android:layout_height="@dimen/normal_80dp"
                    android:background="@drawable/shape_e5e5e5_r10"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:padding="@dimen/normal_20dp"
                    android:textSize="@dimen/normal_28sp" />
            
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/normal_20dp"
                    android:text="随机密码"
                    android:textColor="@color/color_000"
                    android:textSize="@dimen/normal_34sp" />
                
                <LinearLayout
                    android:layout_width="@dimen/normal_520dp"
                    android:layout_height="@dimen/normal_80dp"
                    android:background="@drawable/shape_e5e5e5_r10"
                    android:orientation="horizontal">
                    
                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入随机密码"
                        android:inputType="phone"
                        android:paddingLeft="@dimen/normal_20dp"
                        android:paddingTop="@dimen/normal_20dp"
                        android:paddingBottom="@dimen/normal_20dp"
                        android:singleLine="true"
                        android:textSize="@dimen/normal_28sp" />
                    
                    <View
                        android:layout_width="@dimen/normal_1dp"
                        android:layout_height="@dimen/normal_43dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/normal_10dp"
                        android:layout_marginRight="@dimen/normal_20dp"
                        android:background="@color/color_ddd" />
                    
                    <TextView
                        android:id="@+id/tv_get_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/normal_20dp"
                        android:paddingRight="@dimen/normal_15dp"
                        android:paddingBottom="@dimen/normal_20dp"
                        android:text="点击获取随机密码"
                        android:textColor="@color/color_75C4EC"
                        android:textSize="@dimen/normal_26sp" />
                </LinearLayout>
            
            </LinearLayout>
        </LinearLayout>
        
        <cn.dlc.guankungongxiangjicunji.main.widget.CustomKeyboardView
            android:id="@+id/customKeyboardView"
            android:layout_width="@dimen/normal_362dp"
            android:layout_height="@dimen/normal_484dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/normal_55dp" />
    
    </LinearLayout>
    
    <!--<include layout="@layout/back_and_phone" />-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/normal_55dp"
        android:layout_marginBottom="@dimen/normal_55dp"
        android:orientation="vertical">
        
        <Button
            android:id="@+id/bt_back"
            style="@style/CommonButtonStyle"
            android:layout_gravity="right"
            android:text="@string/fanhui" />
    
    </LinearLayout>
