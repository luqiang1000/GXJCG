<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_120dp"
    android:background="@color/color_75C4EC"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_step_one"
        android:layout_width="@dimen/normal_52dp"
        android:layout_height="@dimen/normal_52dp"
        android:background="@drawable/selector_step"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/selector_white_75c4ec"
        android:textSize="@dimen/normal_34sp"
        android:textStyle="bold" />

    <View
        android:layout_width="@dimen/normal_38dp"
        android:layout_height="@dimen/normal_2dp"
        android:background="@color/color_99DBFD" />

    <TextView
        android:id="@+id/tv_step_two"
        android:layout_width="@dimen/normal_52dp"
        android:layout_height="@dimen/normal_52dp"
        android:background="@drawable/selector_step"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/selector_white_75c4ec"
        android:textSize="@dimen/normal_34sp"
        android:textStyle="bold" />

    <View
        android:layout_width="@dimen/normal_38dp"
        android:layout_height="@dimen/normal_2dp"
        android:background="@color/color_99DBFD" />

    <TextView
        android:id="@+id/tv_step_three"
        android:layout_width="@dimen/normal_52dp"
        android:layout_height="@dimen/normal_52dp"
        android:background="@drawable/selector_step"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/selector_white_75c4ec"
        android:textSize="@dimen/normal_34sp"
        android:textStyle="bold" />

    <View
        android:layout_width="@dimen/normal_38dp"
        android:layout_height="@dimen/normal_2dp"
        android:background="@color/color_99DBFD" />

    <TextView
        android:id="@+id/tv_step_four"
        android:layout_width="@dimen/normal_52dp"
        android:layout_height="@dimen/normal_52dp"
        android:background="@drawable/selector_step"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/selector_white_75c4ec"
        android:textSize="@dimen/normal_34sp"
        android:textStyle="bold" />

    <View
        android:layout_width="@dimen/normal_38dp"
        android:layout_height="@dimen/normal_2dp"
        android:background="@color/color_99DBFD" />

    <TextView
        android:id="@+id/tv_step_five"
        android:layout_width="@dimen/normal_52dp"
        android:layout_height="@dimen/normal_52dp"
        android:background="@drawable/selector_step"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/selector_white_75c4ec"
        android:textSize="@dimen/normal_34sp"
        android:textStyle="bold" />

    <View
        android:layout_width="@dimen/normal_38dp"
        android:layout_height="@dimen/normal_2dp"
        android:background="@color/color_99DBFD" />

    <TextView
        android:id="@+id/tv_step_six"
        android:layout_width="@dimen/normal_52dp"
        android:layout_height="@dimen/normal_52dp"
        android:layout_marginRight="@dimen/normal_50dp"
        android:background="@drawable/selector_step"
        android:gravity="center"
        android:text="6"
        android:textColor="@color/selector_white_75c4ec"
        android:textSize="@dimen/normal_34sp"
        android:textStyle="bold" />
</LinearLayout>
