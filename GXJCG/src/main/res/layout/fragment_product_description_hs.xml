<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/normal_40dp"
        android:layout_marginRight="@dimen/normal_40dp"
        android:layout_weight="1"
        android:gravity="center|left"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_90dp"
            android:text="@string/shiyongshuomingxiangqing"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/normal_0dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_self"
                android:layout_width="@dimen/normal_320dp"
                android:layout_height="@dimen/normal_382dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/im_takeown002_hs" />


            <ImageView
                android:id="@+id/iv_friend"
                android:layout_width="@dimen/normal_320dp"
                android:layout_height="@dimen/normal_382dp"
                android:layout_marginLeft="@dimen/normal_20dp"
                android:layout_gravity="center"
                android:src="@mipmap/im_change002_hs" />


            <ImageView
                android:id="@+id/iv_gift"
                android:layout_width="@dimen/normal_320dp"
                android:layout_height="@dimen/normal_382dp"
                android:layout_marginLeft="@dimen/normal_20dp"
                android:layout_gravity="center"
                android:src="@mipmap/im_present002_hs" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_back"
        style="@style/CommonButtonStyle"
        android:layout_marginBottom="@dimen/normal_60dp"
        android:layout_marginLeft="@dimen/normal_60dp"
        android:layout_marginTop="@dimen/normal_45dp"
        android:text="@string/fanhui" />

</LinearLayout>