<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/normal_55dp"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/shape_e5e5e5_r10">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="@dimen/normal_55dp"
            android:layout_marginLeft="@dimen/normal_55dp"
            android:orientation="horizontal">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_34sp"
            android:text="尊敬的用户，您的寄存时间为"/>
            <TextView
                android:id="@+id/tv_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/color_FA8D0D"
                android:textSize="@dimen/normal_34sp"
                tools:text="xx小时"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/color_333"
                android:textSize="@dimen/normal_34sp"
                android:text="，已经超过起步价时间"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/color_FA8D0D"
                android:textSize="@dimen/normal_34sp"
                tools:text="2小时20分"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/color_333"
                android:textSize="@dimen/normal_34sp"
                android:text="，请支付"/>
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/color_FA8D0D"
                android:textSize="@dimen/normal_52sp"
                tools:text="200"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/color_FA8D0D"
                android:textSize="@dimen/normal_34sp"
                android:text="元"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/fl_btn_wechat"
                android:layout_width="@dimen/normal_660dp"
                android:layout_height="@dimen/normal_400dp"
                android:background="@mipmap/im_weixn">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_42sp"
                    android:layout_marginTop="@dimen/normal_100dp"
                    android:text="微信支付"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_btn_zhifubao"
                android:layout_width="@dimen/normal_660dp"
                android:layout_height="@dimen/normal_400dp"
                android:layout_marginLeft="@dimen/normal_120dp"
                android:background="@mipmap/im_zhifubao">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_42sp"
                    android:layout_marginTop="@dimen/normal_100dp"
                    android:text="支付宝支付"/>
            </FrameLayout>
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/normal_55dp"
        android:paddingBottom="@dimen/normal_55dp"
        android:paddingRight="@dimen/normal_55dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="@dimen/normal_400dp"
            android:layout_height="@dimen/normal_90dp"
            android:background="@drawable/selector_gray_primary"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_36sp"/>
        
    </LinearLayout>
    
</LinearLayout>