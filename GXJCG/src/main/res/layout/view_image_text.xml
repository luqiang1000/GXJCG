<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/normal_20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_order"
            android:layout_width="@dimen/normal_40dp"
            android:layout_height="@dimen/normal_40dp"
            android:background="@drawable/shape_white_circle"
            android:gravity="center"
            android:textSize="@dimen/normal_28sp"
            android:textColor="@color/color_666"
            tools:text="1"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_10dp"
            android:textSize="@dimen/normal_28sp"
            android:textColor="@color/color_666"
            tools:text="自存自取"/>
    </LinearLayout>
</LinearLayout>