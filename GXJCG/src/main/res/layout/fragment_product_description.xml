<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    

    <FrameLayout
        android:layout_width="@dimen/normal_1800dp"
        android:layout_height="@dimen/normal_637dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_line_r10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_100dp"
            android:layout_marginTop="@dimen/normal_90dp"
            android:text="@string/shiyongshuomingxiangqing"
            android:textColor="@color/color_333"
            android:textSize="@dimen/normal_34sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_100dp"
            android:layout_marginTop="@dimen/normal_220dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_self"
                android:layout_width="@dimen/normal_502dp"
                android:layout_height="@dimen/normal_322dp"
                android:src="@mipmap/zicunziqu" />

            <View
                android:layout_width="@dimen/normal_50dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_friend"
                android:layout_width="@dimen/normal_502dp"
                android:layout_height="@dimen/normal_322dp"
                android:src="@mipmap/jiaojiewupin" />

            <View
                android:layout_width="@dimen/normal_50dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_gift"
                android:layout_width="@dimen/normal_502dp"
                android:layout_height="@dimen/normal_322dp"
                android:src="@mipmap/songliwu" />

        </LinearLayout>

    </FrameLayout>

    <Button
        android:id="@+id/bt_back"
        style="@style/CommonButtonStyle"
        android:layout_marginLeft="@dimen/normal_60dp"
        android:layout_marginTop="@dimen/normal_45dp"
        android:text="@string/fanhui" />

</LinearLayout>