        android:textSize="@dimen/normal_34sp"
        android:textStyle="bold" />

    <View
        android:layout_width="@dimen/normal_38dp"
        android:layout_height="@dimen/normal_2dp"
        android:background="@color/color_99DBFD" />

    <TextView
        android:id="@+id/tv_step_six"
        android:layout_width="@dimen/normal_52dp"
        android:layout_height="@dimen/normal_52dp"
        android:background="@drawable/selector_step"
        android:gravity="center"
        android:text="6"
        android:textColor="@color/selector_white_75c4ec"
        android:textSize="@dimen/normal_34sp"
        android:textStyle="bold" />
</LinearLayout>